{
  "compilerOptions": {
    "experimentalDecorators": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "api/*": ["api/*"],
      "components/*": ["src/components/*"],
      "assets/*": ["src/assets/*"],
      "views/*": ["src/views/*"],
      "utils/*": ["src/utils/*"],
      "directive/*": ["src/directive/*"],
      "styles/*": ["src/styles/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
